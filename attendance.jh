entity Employee{
	nameEn String,
    nameAr String,
    email String,
    employeeCode String,
    mobileNo String ,
    address String ,
    nationalId String,
    title String
}
entity Department{
	code String,
	nameEn String,
    nameAr String
}

entity Attendance{
     logDate Instant,
	 logTimeFrom Instant,
     logTimeTo Instant,
     permissionHours Integer,
     details String
}

entity AttendanceType{
	code String ,
    descEn String ,
    descAr String
}

relationship OneToOne {
	Employee{user} to User
}

relationship OneToOne {
	Employee{manager} to Employee
}

relationship OneToOne {
	Employee{department} to Department
}

relationship OneToOne {
	Attendance{attendanceType} to AttendanceType
}

relationship OneToOne {
	Attendance{employee} to Employee
}
relationship OneToOne {
	Attendance{managerApprovedBy} to Employee
}
relationship OneToOne {
	Attendance{hrApprovedBy} to Employee
}
paginate * with pagination

service all with serviceClass

dto all with mapstruct
